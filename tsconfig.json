{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./global.d.ts"]
  },
  "include": ["services/**/*"],
  "exclude": ["node_modules", "services/arbitration-agent.ts"]
}